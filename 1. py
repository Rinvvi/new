from flask import Flask
from flask import render_template

app = Flask(__name__)

@app.route('/')
def index():
    return render_template("index.html")

@app.route('/proba')
def proba():
    return render_template('hello.html')

@app.route('/shop')
def shop():
    return render_template('shop.html')

@app.route('/search')
def search():
    return 'Поиск'

@app.route('/login')
def login():
    return 'Вход в аккаунт/Регистрация'


@app.route('/about')
def about():
    return 'О нас'

@app.route('/news')
def news():
    return 'Новости и акции'

if __name__ =='__main__': #точка ввода нашей программы
    print("Главная страница")
    app.run(debug=True)